{% extends "admin/base_admin.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mt-3 d-flex align-items-center justify-content-between">
                <h1>Liste des produits</h1>
                <a class="btn btn-primary border-0 text-white bg-dark" href="{{ path('product_new') }}">Ajouter</a>
            </div>

            

            <div class="navigation py-2">
                {{ knp_pagination_render(products) }}
            </div>
            {% for product in products %} {#Pour chaque produit dans le tableau des produits, je veux afficher un produit(variable product ce cr√©e au moment du for, la variable products existe dans le render#}
                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="w-100 imageCard">
                        </div>
                        <div class="card-body">
                            <h5 class="text-center">{{ product.name }}</h5>
                        </div>
                       <div class="col-12 mt-3">
            
        </div>

               
                        <div class="card-footer">
                            <a class="btn btn-info border-0 text-white bg-dark w-100" href="{{ path('product_edit',{'id' : product.id }) }}">Modifier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="navigation py-2">
                {{ knp_pagination_render(products) }}
            </div>
        </div>
    
    </div>
{% endblock %}
