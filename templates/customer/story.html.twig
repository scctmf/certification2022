{% extends "customer/base_customer.html.twig" %}


{% block body %}

        

            {% for item in items %}
                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                    <div class="card cardProduct">
                        <div class="card-header">
                            <img src="{{ asset(item.getProduct.imagePath) }}" alt="{{ item.getProduct.name }}" class="w-100 imageCard">
                        </div>
                        <div class="card-body">
                            <h5 class="text-center">{{ item.getProduct.name }}</h5>
                            <p class="text-center">{{ item.getProduct.story.content }}</p>
                        </div>
                        
                    </div>
                </div>
                {% endfor %}
           
        </div>
    </div>
{% endblock %}